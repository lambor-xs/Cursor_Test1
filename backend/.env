# 项目基础配置
PROJECT_NAME="自动发卡系统"
API_V1_STR="/api/v1"

# 安全配置
SECRET_KEY="your-super-secret-key-please-change-in-production"  # 用于JWT加密的密钥
ALGORITHM="HS256"  # JWT加密算法
ACCESS_TOKEN_EXPIRE_MINUTES=30  # 访问令牌过期时间（分钟）

# 数据库配置
DATABASE_URL="sqlite:///./sql_app.db"  # SQLite数据库URL
# 如果使用MySQL，使用以下格式：
# DATABASE_URL="mysql+pymysql://user:password@localhost:3306/dbname"

# 跨域配置
BACKEND_CORS_ORIGINS=["http://localhost:3000"]  # 允许的前端域名

# 日志配置
LOG_LEVEL="INFO"  # 日志级别
LOG_FILE="logs/app.log"  # 日志文件路径 